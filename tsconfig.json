{
  "compilerOptions": {
    "experimentalDecorators": true,//ts注解support
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
//    "preserveSymlinks": true
  },
  "include": ["./src"],
  "exclude": [
    "node_modules"
  ]
}
